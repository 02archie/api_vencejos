datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  Administrador
  Empleado
  Cliente
}

model users {
  id        Int    @id @default(autoincrement())
  name      String 
  last_name String
  role      Role
  phone     BigInt
  email     String @unique
  password  String
}
